{
  "name": "easymediaconverter",
  "displayName": "Easy Media Converter",
  "description": "Convert audio and video media to mp3/mp4",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "emc.download",
        "title": "EMC: Download ffmpeg"
      },
      {
        "command": "emc.convertMp3",
        "title": "EMC: Convert to mp3 (Cloud Function)"
      },
      {
        "command": "emc.convertMp4",
        "title": "EMC: Convert to mp4 (Cloud Function)"
      },
      {
        "command": "emc.convertLocalMp3",
        "title": "EMC: Convert to mp3 (locally)"
      },
      {
        "command": "emc.convertLocalMp4",
        "title": "EMC: Convert to mp4 (locally)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "emc.convertMp3",
          "when": "false"
        },
        {
          "command": "emc.convertMp4",
          "when": "false"
        },
        {
          "command": "emc.convertLocalMp3",
          "when": "false"
        },
        {
          "command": "emc.convertLocalMp4",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "alt": "",
          "when": "resourceExtname =~ /\\.(wav|wma|flac)$/",
          "command": "emc.convertMp3",
          "group": "emcGroup@1"
        },
        {
          "when": "resourceExtname =~ /\\.(avi|wmv|flv|mkv)$/",
          "command": "emc.convertMp4",
          "group": "emcGroup@1"
        },
        {
          "when": "resourceExtname =~ /\\.(wav|wma|flac)$/",
          "command": "emc.convertLocalMp3",
          "group": "emcGroup@1"
        },
        {
          "when": "resourceExtname =~ /\\.(avi|wmv|flv|mkv)$/",
          "command": "emc.convertLocalMp4",
          "group": "emcGroup@1"
        }
      ]
    },
    "configuration": [
      {
        "title": "Easy Media Converter",
        "properties": {
          "emc.gcfUrl": {
            "type": "string",
            "default": "THE_URL",
            "description": "Specify Google Cloud Function URL."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/ffmpeg-static": "^3.0.1",
    "@types/fluent-ffmpeg": "^2.1.20",
    "@types/node": "17.x",
    "@types/vscode": "^1.63.1",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "copy-webpack-plugin": "^10.2.1",
    "eslint": "^8.6.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@google-cloud/functions": "^1.2.0",
    "@google-cloud/storage": "^5.18.0",
    "axios": "^0.25.0",
    "dotenv": "^14.2.0",
    "ffmpeg-static": "^4.4.1",
    "fluent-ffmpeg": "^2.1.2"
  }
}
